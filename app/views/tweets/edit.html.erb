<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Edit Tweet</h4>
  </div>
  <div class="panel-body">
    <%= form_for(@resource, url: tweet_path(@resource), html: { role: 'form' }) do |f| %>
      <%= render 'form', f: f%>
      <%= f.button "Update", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
