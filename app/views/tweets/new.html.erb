<div class="panel panel-default">
  <div class="panel-heading">
    <h4>New Tweet</h4>
  </div>
  <div class="panel-body">
    <%= form_for(@resource, url: tweets_path, method: :post, html: { role: 'form' }) do |f| %>
      <%= render 'form', f: f%>
      <%= f.button "Create", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
